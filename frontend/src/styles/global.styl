@import "variables.styl"
@import url('https://fonts.googleapis.com/css?family=Montserrat:400,600');

// ==================================
//              Reset
// ==================================

@import "reset.styl"

// ==================================
//          General styles
// ==================================

html 
    height: 100%

body
    // @rules   
    // Layout and box-model properties (margin, padding, box-sizing, overflow, position, display, width/height, etc.)
    // Typographic properties (font-, line-height, letter-spacing, text-, etc.)
    font-family: 'Montserrat', sans-serif
    font-size: $mobile-font-size
    font-weight: 400
    line-height: 1

    // Stylistic properties (color, background-*, animation, border, etc.)
    color: $font-color-dark

    // UI properties (appearance, cursor, user-select, pointer-events, etc.)
    // Pseudo-elements (::after, ::before, ::selection, etc.)
    // Pseudo-selectors (:hover, :focus, :active, etc.)
    // Nested elements

h1, h2, h3, h4, h5
    font-weight: inherit

h1, .is-size-1
    font-size: 1em * ($ratio ** 5)

h2, .is-size-2
    font-size: 1em * ($ratio ** 4)

h3, .is-size-3
    font-size: 1em * ($ratio ** 3)

h4, .is-size-4
    font-size: 1em * ($ratio ** 2)

h5, .is-size-5
    font-size: 1em * ($ratio ** 1)

small, .is-size-small
    font-size: 1em * ($ratio ** -1)
    display: block

.is-bold
    font-weight: 600

.is-right
    text-align: right

.level
    display: flex
    justify-content: space-between

.is-link-light, .is-link-dark
    text-decoration: none

.is-link-light
    color: $font-color-light

.is-link-dark
    color: $font-color-dark

.is-success
    color: $success-color

.is-danger
    color: $danger-color

// ==================================
//          Component styles
// ==================================

.button
    height: 45px
    width: 156px

    font-size: inherit
    font-weight: 600

    color: $font-color-light
    background-color: $primary-color
    border-radius: $border-radius

    cursor: pointer

    &:hover
        background-color: $primary-color-light

    &:active
        background-color: $primary-color-dark
        box-shadow: inset 0px 2px 0px 0px rgba(0,0,0,0.3)

    &:focus
        outline: 0

    &.is-success
        &:hover
            background-color: $success-color-light

        &:active
            background-color: $success-color-dark
            box-shadow: inset 0px 2px 0px 0px rgba(0,0,0,0.3);

        background-color: $success-color

    &.is-danger
        &:hover
            background-color: $danger-color-light

        &:active
            background-color: $danger-color-dark
            box-shadow: inset 0px 2px 0px 0px rgba(0,0,0,0.3);

        background-color: $danger-color

    &.is-100 
        width: 100%

    &.is-square
        width: 45px

    &.is-link
        height: unset
        width: unset

        color: $primary-color

        background-color: unset

        &:hover
            color: $primary-color-light

        &:active
            color: $primary-color-dark
            box-shadow: unset

.section
    @media screen and (max-width: 767px)
        padding-left: 0
        padding-top: 56px
        padding-right: 0
        padding-bottom: 10px

    padding-left: 208px
    padding-top: 56px
    padding-right: 0
    padding-bottom: 10px

    &.top
        padding-left: 0

.input
    width: 200px
    height: 40px
    padding-left: 10px

    font-size: inherit
    font-family: inherit 

    background-color: #F2F2F2
    border-radius: $border-radius

    &.input-medium 
        width: 280px

    &.input-large 
        width: 300px

    &.input-100 
        width: 100%

input[type=number]::-webkit-inner-spin-button, 
input[type=number]::-webkit-outer-spin-button
    -webkit-appearance: none
    margin: 0

.label
    & > *
        margin-bottom: 5px
        margin-left: 5px
        
        font-weight: 600
